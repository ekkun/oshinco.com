{
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true,
    "es6": true,
    "jquery": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:eslint-comments/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "eslint-comments"
  ],
  "rules": {
    "no-extra-semi": "warn",
    "no-undef": "warn",
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "space-before-blocks": ["warn", {"functions": "always"}]
  }
}